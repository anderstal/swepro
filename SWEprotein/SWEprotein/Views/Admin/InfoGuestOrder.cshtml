@using System.Web.UI.WebControls.Expressions
@using SWEprotein.Models
@model IEnumerable<tbGuestProductOrder>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InfoOrder</title>   
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
  <h3>Produkter</h3>
    <table class="table table-condensed table-bordered">
        <tr>              
            <th>
                OrderID 
            </th>
            <th>
                Produkt 
            </th>
             <th>
                ProduktID 
            </th>
            <th>
                Antal 
            </th>
            <th>SKICKA ORDER</th>
            <th></th>
        </tr>
    
        @foreach (var item in Model) {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.iGuestOrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbProduct.sName)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.iProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iQuantity)
                </td>           
                <td>
                    @Html.ActionLink("Skicka ORDER", "SendOrder", new { id=item.iGuestOrderID })
                </td>
            </tr>
        }
     
    </table>
    <h3>Skickas till</h3>
      <table class="table table-condensed table-bordered">
          <tr>
              <th>
                  Namn 
              </th>               
              <th>
                  Adress 
              </th>
              <th>
                  Postnummer 
              </th>
              <th>
                  Stad 
              </th>
              <th>
                  Telefonnummer
              </th>
          </tr>
       @foreach (tbGuestOrder item in @ViewBag.guestInfo) {
           <tr>
                <td>
                   Gästbeställning  
                </td>
               <td>
                   @Html.DisplayFor(modelItem => item.sAddress)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.sPostalNumber)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.sCity)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.sTelephone)
               </td>
           </tr>
        }
    </table>
    @Html.ActionLink("Tillbaks till Orderlistan", "Orders", "Admin") |
    @Html.ActionLink("Adminsidan", "Index", "Admin")
   
</body>
</html>
