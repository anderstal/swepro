@using System.Web.UI.WebControls.Expressions
@using SWEprotein.Models
@model IEnumerable<SWEprotein.Models.tbProductOrder>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InfoOrder</title>   <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
  <h3>Produkter</h3>
    <table class="table table-condensed table-bordered">
        <tr>
              
            <th>
                OrderID 
            </th>
            <th>
                Produkt 
            </th>
             <th>
                ProduktID 
            </th>
            <th>
                Antal 
            </th>
            <th>SKICKA ORDER</th>
            <th></th>
        </tr>
    
        @foreach (var item in Model) {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.iOrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbProduct.sName)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.iProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iQuantity)
                </td>
            
                <td>
                    @Html.ActionLink("Skicka ORDER", "SendOrder", new { id=item.iOrderID })
                </td>
            </tr>
        }
     
    </table>
    <h3>Skickas till</h3>
      <table class="table table-condensed table-bordered">
        <tr>
            <th>
                Adress 
            </th>
            <th>
                Postnummer 
            </th>
            <th>
                Stad 
            </th>
            <th>TelefonNr</th>
              <th>AnvändarID</th>
            <th></th>
        </tr>
    
       @foreach (UserInfo item in @ViewBag.orderInfo) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sTelephone)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
             
            </tr>
        }
     
    </table>
    @Html.ActionLink("Tillbaks till Orderlistan", "Orders", "Admin") |
    @Html.ActionLink("Adminsidan", "Index", "Admin")
   
</body>
</html>
