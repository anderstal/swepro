@model IEnumerable<SWEprotein.Models.tbProductType>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductType</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <p>
        @Html.ActionLink("Lägg till ny produkttyp", "CreateProductType")
    </p>
     <table class="table table-condensed table-bordered">
        <tr>
            <th>
              Namn
            </th>
              <th>
              Kategori
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbProductCategory.sName)
            </td>
            <td>
                @Html.ActionLink("Redigera", "EditProductType", new { id=item.iID }) |
               
                @Html.ActionLink("Ta bort", "DeleteProductType", new { id=item.iID })
            </td>
        </tr>
    }
    
    </table> <div>     @Html.ActionLink("Adminsidan", "Index")</div>
</body>
</html>
