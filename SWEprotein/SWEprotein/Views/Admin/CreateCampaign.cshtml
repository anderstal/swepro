@model SWEprotein.Models.tbCampaign

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kampanjer</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm("CreateCampaign", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Kampanj</legend>
    
            <div class="editor-label">
               Namn
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.sName)
                @Html.ValidationMessageFor(model => model.sName)
            </div>
    
           
        <div> <p>Kampanjbild:</p>
    <input type="file" name="file" /></div> <br/>
            <p>
                <input type="submit" value="Skapa" />
            </p>
        </fieldset>
    }
    <div>@ViewBag.ErrorMessage</div>
    <div>
          @Html.ActionLink("Adminsidan", "Index") |    @Html.ActionLink("Till listan", "Campaigns")
    </div>
</body>
</html>
