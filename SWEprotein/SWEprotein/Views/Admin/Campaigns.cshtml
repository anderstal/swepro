@model IEnumerable<SWEprotein.Models.Campaign>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kampanjer</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <p>
        @Html.ActionLink("Skapa ny", "CreateCampaign")
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
              Kampanjnamn
            </th>
            <th>
              URL till bild
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imgURL)
            </td>
            <td>
                @Html.ActionLink("Redigera", "EditCampaign", new { id=item.iID }) |
                @Html.ActionLink("Info", "DetailsCampaign", new { id=item.iID }) |
                @Html.ActionLink("Ta bort", "DeleteCampaign", new { id=item.iID })
            </td>
        </tr>
    }
    
    </table> <div>     @Html.ActionLink("Adminsidan", "Index")</div>
</body>
</html>
