@using SWEprotein.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SWEprotein</title>

    @Styles.Render("~/Content/bootstrapcss")

    <style type="text/css">
        .stylebody {
            background: white;
        }

        .menu {
            background-color: white;
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        }
    </style>
</head>
<body style="background-color: silver">

    <div class="container" style="background-color: black;">

        <div class="row clearfix" id="divtopbanner">
            <div class="col-md-1" style="padding: 0;">
                <a href="/Product/Index">
                    <img src="/Images/Sitegraf/logoSweprot.png" /></a>
            </div>

            <div class="col-md-3 col-md-offset-3 text-center">

           


                @using (Html.BeginForm("Index", "Product", FormMethod.Post))
                {
                    <div style="margin-top: 13px;">
                    <input type="text" name="searchString" data-autocomplete="@Url.Action("QuickSearch", "Product")" />
                    <input type="submit" value="Sök"/>
                    </div>
                }
              
            </div>
            <div class="col-md-offset-2 col-md-3">  
                <span style="color: white;">TEXT OM T.EX FRAKT<br />
                    OCH KREDITVÄNLIGHET ELLER<br />
                    INFO OM FÖRETAGET</span>
            </div>
        </div>

        <div class="row clearfix" id="divmenu">

            <div class="col-md-12 menu">
                <ul class="nav nav-tabs nav-justified menu">
                    <li>@Html.ActionLink("Topplistan", "Topplistan", "Product")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Kosttillskott</a>
                        <ul class="dropdown-menu">
                       

                              <li>
                                @Html.ActionLink("Bars", "Sortiment", "Product", new { id = 1 }, null)
                            </li>
                            <li>@Html.ActionLink("Kolhydrater", "Sortiment", "Product", new { id = 3 }, null)</li>

                            <li>@Html.ActionLink("Drycker", "Sortiment", "Product", new { id = 4 }, null)</li>

                            <li>@Html.ActionLink("Fettförbrännare", "Sortiment", "Product", new { id = 5 }, null)</li>
                            <li>@Html.ActionLink("Gainers", "Sortiment", "Product", new { id = 6 }, null)</li>
                            <li>@Html.ActionLink("Kreatin", "Sortiment", "Product", new { id = 7 }, null)</li>
                            <li>@Html.ActionLink("Muskelökande", "Sortiment", "Product", new { id = 8 }, null)</li>
                            <li>@Html.ActionLink("Vitaminer", "Sortiment", "Product", new { id = 9 }, null)</li>

                            <li>@Html.ActionLink("Pre Work-Out", "Sortiment", "Product", new { id = 10 }, null)</li>
                            <li>@Html.ActionLink("Protein", "Sortiment", "Product", new { id = 13 }, null)</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Kläder</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Byxor", "Sortiment", "Product", new { id = 2 }, null)</li>
                            <li>@Html.ActionLink("Tröjor", "Sortiment", "Product", new { id = 12 }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tillbehör</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Shakers", "Sortiment", "Product", new { id = 11 }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Kostschema", "KostScheman", "Info")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Team SWEprotein</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Blogg...", "KostScheman", "Info", new { id = 4 }, null)</li>
                            <li>@Html.ActionLink("Blogg...", "KostScheman", "Info", new { id = 14 }, null)</li>
                            <li>@Html.ActionLink("Blogg...", "KostScheman", "Info", new { id = 14 }, null)</li>
                            <li>@Html.ActionLink("Blogg...", "KostScheman", "Info", new { id = 14 }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Kontakta oss", "KontaktaOss", "Info")</li>

                </ul>
            </div>

        </div>
        <div class="row clearfix" id="divsite" style="margin-top: 10px;">
            <div class="col-md-2" id="divleftbar">
                <div class="caption">

                    <div>
                        @if (Request.IsAuthenticated)
                        {
                            <p>
                                Välkommen, @Html.ActionLink(User.Identity.Name, "Index", "User", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Logga ut</a>
        }
                            </p>
                                                                     
                        }
                        else
                        {
                            @Html.Action("Login", "Account")
                        }
                        @Html.Action("_TopList", "Shared")
                    </div>

                </div>
            </div>
            <div class="col-md-8 stylebody img-rounded" id="divmainpage">
                @RenderBody()


                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrapjs")
            </div>
            <div class="col-md-2" id="divrightbar">
                @Html.Action("_Kundkorg", "Shared")
                @Html.Action("_Campaign", "Shared")
            </div>


        </div>

    </div>

    @Content.Script("jquery-1.9.1.min.js", Url)
    @Content.Script("jquery.unobtrusive-ajax.min.js", Url)
    
    @Content.Script("jquery-ui.min.js", Url)
    @Content.Script("autosearch.js", Url)
    @RenderSection("scripts", false)
</body>
</html>

